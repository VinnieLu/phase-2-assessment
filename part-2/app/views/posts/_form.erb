<form id="new-post-form" action="/posts" method="post" class="form">
  <label for="post[guest_name]" class="label">Name:</label>
  <input type="text" name="post[guest_name]" class="input">

  <label for="post[hometown]" class="label">Hometown:</label>
  <input type="text" name="post[hometown]"  class="input">

  <label for="post[body]" class="label">Comment:</label>
  <textarea name="post[body]" class="textarea"></textarea>

  <input type="submit" name="submit" value="Save Your Comment" class="input submit">
</form>
